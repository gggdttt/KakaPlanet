<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hello.demo.dao.userInfoDao">
    <select id="queryUserInfo" resultType="com.hello.demo.entity.UserInfo">
        SELECT *
        FROM user_info
    </select>
    <select id="queryUserInfoByWxId" resultType="com.hello.demo.entity.UserInfo">
        SELECT *
        FROM user_info
        WHERE
        user_wx_ID=#{user_wx_ID}
    </select>
    <select id="queryUserByWxId" resultType="com.hello.demo.entity.UserInfo">
        SELECT *
        FROM user_info
        WHERE
        user_wx_ID=#{user_wx_ID}
    </select>
    <update id="updateImage" parameterType="com.hello.demo.entity.UserInfo">
        update user_info
        <set>
            <if test="user_image_ID!=null">user_name=#{user_name}</if>
        </set>
        where user_ID=#{userId}
    </update>
    <insert id="insertUserInfo"  parameterType="com.hello.demo.entity.UserInfo">
        INSERT INTO
        user_info(user_wx_ID,user_image_url,user_name)
        VALUES
        (#{user_wx_ID},#{user_image_url},#{user_name})
    </insert>
</mapper>